    print("Verified! You can vote.")
    while True:
        vote = input('''Please select which political party you want to vote\n
Below is the list of available Political Parties: \n1)Party number 1 \n2)Party number 2
3)Party number 3\n4)Party number 4\n5)Party number 5\n6)Party number 6\n
Please enter the name of the Political Party here: ''').upper()
        if vote == "1":
            print(f"Thank You! You have voted {vote}")
        elif vote == "2":
            print(f"Thank You! You have voted {vote}")
        elif vote == "3":
            print(f"Thank You! You have voted {vote}")
        elif vote == "4":
            print(f"Thank You! You have voted {vote}")
        elif vote == "5":
            print(f"Thank You! You have voted {vote}")
        elif vote == "6":
            print(f"Thank You! You have voted {vote}")
